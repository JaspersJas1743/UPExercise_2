    </Style>
    
    <Style TargetType="GroupBox" x:Key="MyGroupBox">
        <Style.Setters>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style.Setters>
    </Style>

    <Style TargetType="Grid" x:Key="MyGrid">
        <Style.Setters>
            <Setter Property="Background" Value="White"/>
        </Style.Setters>
    </Style>

